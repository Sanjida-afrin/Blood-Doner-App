@model List<BloodDonerListViewModel>

@{
	ViewData["Title"] = "Blood Donor List";
}

<h2 class="mb-4">Blood Donor List</h2>
<form method="get" class="row g-2 mb-3">
        <div class="col-md-3">
            <select name="bloodGroup" class="form-select">
                <option value="">All Blood Groups</option>
                @foreach (var bg in Enum.GetNames(typeof(BloodGroup)))
                {
                    <option value="@bg">@bg</option>
                }
            </select>
        </div>
    
    <div class="col-md-3">
        <input  type="text" name="address"  class="form-control" placeholder="Serch by address"/>
    </div>
    <div class="col-md-3">
        <select name="IsEligible" class="form-select">
            <option value="">All Done</option>
            <option value="true">Eligible</option>
            <option value="false">Not Eligible</option>
        </select>
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-primary m-100">Search</button>
    </div>
</form>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Picture</th>
            <th>Name</th>
            <th>Blood Group</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Address</th>
            <th>Age</th>
            <th>Last Donation</th>
            <th>Eligiblity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donor in Model)
        {
            <tr>
                <td>
                    @if(!string.IsNullOrEmpty(donor.ProfilePicture))
                    {
                        <img src="~/@donor.ProfilePicture" alt="Profile" width="60" height="60" style="object-fit:cover;" class="rounded-circle" />
                    }
                    else{
                        <i class="fas fa-user-circle fa-3x text-secondary"> </i>
                    }
                </td>
                <td>@donor.FullName</td>
                <td>@donor.BloodGroup</td>
                <td>@donor.ContactNumber</td>
                <td>@donor.Email</td>
                <td>@donor.Address</td>
                <td>@donor.Age</td>
                <td>@donor.LastDonationDate</td>
                <td>
                    @if(donor.IsEligible)
                    {
                        <span class="badge bg-success">Eligible</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Not Eligible</span>
                    }
                </td>


                <td>
                    <a asp-action="Details" asp-route-id="@donor.Id" class="btn btn-info btn-sm text-white"><i class="bi bi-eye"></i> View</a>
                    <a asp-action="Edit" asp-route-id="@donor.Id" class="btn btn-warning btn-sm text-dark" ><i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-action="Delete" asp-route-id="@donor.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
